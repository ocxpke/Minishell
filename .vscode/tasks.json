{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build all C and A files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.c",
				"${workspaceFolder}/src/**/*.c",
				"${workspaceFolder}/src/**/**/*.c",
                "${workspaceFolder}/lib/libft/src/*.c",
				"${workspaceFolder}/tests/utils/*.c",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/lib/libft/include",
				"-I${workspaceFolder}/lib/libft/include/ft_get_next_line",
				"-I${workspaceFolder}/lib/libft/include/ft_printf",
				"-lreadline",
                "-o",
                "${workspaceFolder}/src/main.out",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build bonus files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/bonus/src_bonus/*.c",
                "${workspaceFolder}/bonus/src_bonus/**/*.c",
                "${workspaceFolder}/lib/libft/src/*.c",
                "${workspaceFolder}/lib/libft/src/**/*.c",
                "${workspaceFolder}/lib/libft/src/**/**/*.c",
                "-I${workspaceFolder}/bonus/include_bonus",
                "-I${workspaceFolder}/lib/libft/include",
                "-I${workspaceFolder}/lib/libft/include/ft_get_next_line",
                "-I${workspaceFolder}/lib/libft/include/ft_printf",
                "-lm",
                "-o",
                "${workspaceFolder}/bonus/checker.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task to build bonus checker program."
        }
    ],
    "version": "2.0.0"
}
